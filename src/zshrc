ZSH=$HOME/.oh-my-zsh
ZSH_THEME="clean"

export GOROOT=$(go env GOROOT)
export GOPATH=$HOME/depot/go

export PATH=/usr/local/share/npm/bin:/usr/local/heroku/bin:/usr/local/sbin:/usr/local/bin:$GOPATH/bin:$GOROOT:$PATH

plugins=(brew bundler gem git github heroku osx rails ruby)

export ARCHFLAGS="-arch x86_64"
export EDITOR="mvim"
export JRUBY_OPTS="--dev"
export JAVA_OPTS="-Djava.awt.headless=true"
export JAVA_HOME=$(/usr/libexec/java_home)

source $ZSH/oh-my-zsh.sh

fpath=(/usr/local/share/zsh-completions $fpath)

if which rbenv > /dev/null; then eval "$(rbenv init -)"; fi

# Find in files, usage: fif PATH STRING
function fif() {
  find $1 | xargs grep "$2" -sl
}

function h { heroku $argv[0,-2] --app $argv[-1] }
function hp { h $argv production }
function hs { h $argv staging }

alias emacs='~/bin/emacs &'

if which cotd > /dev/null; then cotd; fi
